<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
                version="2.0">
    <namespace>http://tralfamadore.net/cmf</namespace>
    <tag>
        <tag-name>content</tag-name>
        <component>
            <component-type>net.tralfamadore.component.content.Content</component-type>
            <renderer-type>net.tralfamadore.ContentRenderer</renderer-type>
        </component>
        <attribute>
            <name>name</name>
            <required>true</required>
        </attribute>
        <attribute>
            <name>namespace</name>
            <required>true</required>
        </attribute>
        <attribute>
            <name>id</name>
        </attribute>
        <attribute>
            <name>escape</name>
            <type>boolean</type>
        </attribute>
        <attribute>
            <name>binding</name>
            <type>javax.faces.component.UIComponent</type>
        </attribute>
        <attribute>
            <name>rendered</name>
            <type>boolean</type>
        </attribute>
        <attribute>
            <name>style</name>
        </attribute>
        <attribute>
            <name>styleClass</name>
        </attribute>
        <attribute>
            <name>dir</name>
        </attribute>
        <attribute>
            <name>lang</name>
        </attribute>
        <attribute>
            <name>title</name>
        </attribute>
    </tag>
</facelet-taglib>
